@model IEnumerable<QuanLyXe.Models.CTHD>
@{
    ViewBag.Title = "Hóa đơn";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- Cart Start -->
<div class="cart-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="cart-page-inner">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Mã hóa đơn</th>
                                    <th>Người thuê</th>
                                    <th>Người cho thuê</th>
                                    <th>Tên Xe</th>
                                    <th>Ảnh</th>
                                    <th>Số lượng</th>
                                    <th>Ngày thuê</th>
                                    <th>Ngày trả</th>
                                    <th>Thành tiền</th>
                                    <th>Tình trạng</th>
                                </tr>
                            </thead>
                            <tbody class="align-middle">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.maHD</td>
                                        <td>@item.HOADON.NGUOIDUNG.hoten</td>
                                        <td>@item.SANPHAM.NGUOIDUNG.hoten</td>
                                        <td>@item.SANPHAM.tenSP</td>
                                        <td><img style="height: 125px;width: 125px;" src="@Url.Content("~/img/"+ item.SANPHAM.image)" /></td>
                                        <td>@item.soluong</td>
                                        <td>@item.HOADON.ngaythue</td>
                                        <td>@item.HOADON.ngaytra</td>
                                        <td>@String.Format("{0:0,0}", @item.thanhtien)₫</td>
                                        <td>
                                            <p style="color:blue">@item.HOADON.TIENDOTHUEXE.tinhtrangthuexe</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart End -->
