        <div class="product-detail-top">
            <div class="row align-items-center">
                <div class="col-md-5">
                    <div class="product-slider-single normal-slider">
                        <img src="~/img/@Model.image" alt="Product Image">
                    </div>

                </div>
                <div class="col-md-7">
                    <div class="product-content">
                        <div class="title"><h2>@Model.tenSP</h2></div>
                        <div class="ratting">
                            <i><b>Người cho thuê: </b>@Model.NGUOIDUNG.hoten</i>
                        </div>
                        <div class="price">
                            <h4>Price:</h4>
                            <p>@Model.giathue₫</p>
                        </div>
                        <div class="quantity">
                            <h4>Số lượng:</h4>
                            <div class="qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                        <div class="p-color">
                            <h4>Mô tả:</h4>
                            <div class="btn-group btn-group-sm">
                                <p>@Html.Raw(Model.mota)</p>
                            </div>
                        </div>
                        <div class="p-color">
                            <h4>Khung xe:</h4>
                            <div class="btn-group btn-group-sm">
                                <p>@Model.khungxe</p>
                            </div>
                        </div>
                        <div class="p-color">
                            <h4>Màu:</h4>
                            <div class="btn-group btn-group-sm">
                                <p>@Model.mausac</p>
                            </div>
                        </div>
                        <div class="p-color">
                            <h4>Phân khối:</h4>
                            <div class="btn-group btn-group-sm">
                                <p>@Model.phankhoi cm3</p>
                            </div>
                        </div>
                        <div class="p-color">
                            <h4>Biển Số:</h4>
                            <div class="btn-group btn-group-sm">
                                <p>@Model.bienso</p>
                            </div>
                        </div>
                        <div class="p-color">
                            <h4>Địa Chỉ:</h4>
                            <div class="btn-group btn-group-sm">
                                <p>@Model.diachi</p>
                            </div>
                        </div>
                        <div class="action">
                            <a class="btn" href="@Url.Action("Themgiohang1","Giohang", new { @imaSP = Model.maSP, @strURL=Request.Url.ToString()})"><i class="fa fa-shopping-bag"></i>Thuê ngay</a>

