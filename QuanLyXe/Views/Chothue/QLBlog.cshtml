@model IEnumerable<QuanLyXe.Models.BLOGDULICH>
@{
    ViewBag.Title = "Quản lý blog";
    Layout = "~/Views/Shared/_LayoutChothue.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Quản lý Blog</h4>
                        <p class="card-category">@Html.ActionLink("Thêm mới bài đăng", "ThemmoiBlog")</p>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>Mã tiêu đề</th>
                            <th>Tiêu đề</th>
                            <th>Ảnh</th>
                            <th>Ngày đăng</th>
                            <th>Sửa|Xóa</th>
                            <th>Chi tiết</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.maTD</td>
                                        <td>@item.tieude</td>
                                        <td><img style="height: 125px;width: 125px;" src="@Url.Content("~/img/"+ item.hinhanh)" /></td>
                                        <td>@item.ngaydang</td>
                                        <td>
                                            <a href="/Chothue/Suablog/@item.maTD"><i class="fa fa-edit" style="font-size:30px;"></i></a> |
                                            <a href="/Chothue/XoaBlog/@item.maTD"><i class="fa fa-trash-alt " style="font-size:30px;"></i></a>
                                        </td>
                                        <td>
                                            <a href="/Chothue/Chitietblog/@item.maTD"><i class="fa fa-list-alt" style="font-size:30px;"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>