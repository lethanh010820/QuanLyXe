
@model QuanLyXe.Models.BLOGDULICH

@{
    ViewBag.Title = "Thông tin chi tiết blog";
    Layout = "~/Views/Shared/_LayoutChothue.cshtml";
}

<style>

    label {
        font-size: 17px;
        font-weight: bold;
    }
</style>
<!-- End Navbar -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Chi tiết blog. Mã: @Model.maTD</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <label>Ảnh:</label>
                                    <img style=" margin-left: 150px; height: 250px; width: 250px;" src="@Url.Content("~/img/"+ Model.hinhanh)" />
                                </div>
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <label>Tên xe:</label>
                                    @Model.tieude
                                </div>
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <label>Mô tả ngắn:</label>
                                    @Html.Raw(Model.mota)
                                </div>
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <label>Nội dung:</label>
                                    @Html.Raw(Model.noidung)
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Người đăng:</label>
                                    @Model.NGUOIDUNG.hoten
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Ngày đăng:</label>
                                    @Model.ngaydang
                                </div>
                            </div>
                            
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <a class="btn btn-success" href="~/Chothue/QLBlog"><i class="fa fa-caret-left" style="font-size:15px;"></i> Quay lại</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

