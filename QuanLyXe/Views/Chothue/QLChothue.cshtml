@model IEnumerable<QuanLyXe.Models.SANPHAM>
@{
    ViewBag.Title = "Cho thuê xe";
    Layout = "~/Views/Shared/_LayoutChothue.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Quản lý xe</h4>
                        <p class="card-category">@Html.ActionLink("Thêm mới sản phẩm", "Themmoixe")</p>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>Mã Xe</th>
                            <th>Tên Xe</th>
                            <th>Ảnh</th>
                            <th>Giá thuê</th>
                            <th>Mô tả Sản phẩm</th>
                            <th>Hãng xe</th>
                            <th>Loại Xe</th>
                            <th>Khu vực</th>
                            <th>Chi tiết</th>
                            <th>Sửa/Xóa</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.maSP</td>
                                        <td>@item.tenSP</td>
                                        <td><img style="height: 125px;width: 125px;" src="@Url.Content("~/img/"+ item.image)" /></td>
                                        <td>@item.giathue</td>
                                        <td>@Html.Raw(item.mota)</td>
                                        <td>@item.hangxe</td>
                                        <td>@item.LOAISANPHAM.tenloaiSP</td>
                                        <td>@item.KHUVUC.tenkv</td>
                                        <td>
                                            <a href="/Chothue/Chitietxe/@item.maSP"><i class="fa fa-list-alt" style="font-size:30px;"></i></a>
                                        </td>
                                        <td>    
                                            <a href="/Chothue/Suaxe/@item.maSP"><i class="fa fa-edit" style="font-size:30px;"></i></a> |
                                            <a href="/Chothue/Xacnhanxoa/@item.maSP"><i class="fa fa-trash-alt" style="font-size:30px;"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>