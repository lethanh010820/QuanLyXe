@{
    ViewBag.Title = "Login Người cho thuê";
    Layout = "~/Views/Shared/_LayoutLoginAdmin.cshtml";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">

            @using (Html.BeginForm("Login", "Chothue", FormMethod.Post, new { @class = "login100-form validate-form" }))
            {
                @Html.ValidationSummary(true)
            <span class="login100-form-title p-b-43">
                Đăng nhập vào Kênh Người cho thuê
            </span>


                <div class="wrap-input100 validate-input" data-validate="Tên tài khoản không được bỏ trống">
                    <input class="input100" type="text" name="username">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Tài khoản</span>
                    @ViewData["Loi1"]
                </div>


                <div class="wrap-input100 validate-input" data-validate="Mật khẩu không được bỏ trống">
                    <input class="input100" type="password" name="password">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Mật khẩu:</span>
                    @ViewData["Loi2"]
                </div>
                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Đăng nhập
                    </button>
                </div>
            }

            <div class="login100-more" style="background-image: url('../../Content/assets/img/anhchothue1.png');">
            </div>
        </div>
    </div>
</div>