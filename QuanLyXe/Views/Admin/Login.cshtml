@{
    ViewBag.Title = "Login Admin";
    Layout = "~/Views/Shared/_LayoutLoginAdmin.cshtml";
}
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login Admin</h3></div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)
                        <div class="form-floating mb-3">
                            <label for="inputEmail">Tài khoản:</label>
                            <input class="form-control" id="exampleInputEmail" name="username" type="text" placeholder="username" />
                            @ViewData["Loi1"]
                        </div>
                        <div class="form-floating mb-3">
                            <label for="inputPassword">Mật khẩu:</label>
                            <input class="form-control" id="exampleInputPassword" name="password" type="password" placeholder="password" />
                            @ViewData["Loi2"]
                        </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <button type="submit" class="btn btn-primary">Đăng nhập</button>
                            </div>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
</main>