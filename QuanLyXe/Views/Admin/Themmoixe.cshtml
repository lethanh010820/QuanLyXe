@model QuanLyXe.Models.SANPHAM
@{
    ViewBag.Title = "Thêm mới xe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    #maloaiSP, #makv {
        width: 300px
    }
</style>
<!-- End Navbar -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thêm mới xe</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Themmoixe", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true)
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Tên xe:</label>
                                    <input class="form-control" type="text" name="tenSP" placeholder="" maxlength="5" required />
                                    @Html.ValidationMessageFor(model => model.tenSP)
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Giá cho thuê:</label>
                                    <input class="form-control" type="text" name="giathue" placeholder="" maxlength="5" required />
                                    @Html.ValidationMessageFor(model => model.giathue)
                                </div>
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <label>Mô tả:</label>
                                </div>
                                <textarea style="width: 550px;" name="mota"></textarea>
                            </div>
                            <div class="col-md-12 pl-1"> 
                                <div class="form-group">
                                    <label>Ảnh bìa:</label>
                                    <div class="form-control">
                                        <input type="file" name="fileupload" value="" />
                                    </div>
                                    @ViewBag.Thongbao
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Khung xe:</label>
                                    <input class="form-control" type="text" name="khungxe" placeholder="" maxlength="5" required />
                                    @Html.ValidationMessageFor(model => model.khungxe)
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Màu sấc:</label>
                                    <input class="form-control" type="text" name="mausac" placeholder="" maxlength="5" required />
                                    @Html.ValidationMessageFor(model => model.mausac)
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Phân khối:</label>
                                    <input class="form-control" type="text" name="phankhoi" placeholder="" maxlength="5" required />
                                    @Html.ValidationMessageFor(model => model.phankhoi)
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Hãng xe:</label>
                                    <input class="form-control" type="text" name="hangxe" placeholder="" maxlength="5" required />
                                    @Html.ValidationMessageFor(model => model.hangxe)
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Biển số:</label>
                                    <input class="form-control" type="text" name="bienso" placeholder="" maxlength="5" required />
                                    @Html.ValidationMessageFor(model => model.bienso)
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Địa chỉ:</label>
                                    <input class="form-control" type="text" name="diachi" placeholder="" maxlength="5" required />
                                    @Html.ValidationMessageFor(model => model.diachi)
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Loại sản phẩm:</label>
                                    <label class="form-control">@Html.DropDownList("maloaiSP")</label>
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Khu vực:</label>
                                    <label class="form-control">@Html.DropDownList("makv")</label>
                                </div>
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <input type="submit" value="Thêm mới" class="btn btn-info btn-fill pull-right" />
                                    <a class="btn btn-success" href="~/Admin/QLXe"><i class="fa fa-caret-left" style="font-size:15px;"></i> Quay lại</a>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

