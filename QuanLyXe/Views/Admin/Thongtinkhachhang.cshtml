
@model QuanLyXe.Models.NGUOIDUNG
@{
    ViewBag.Title = "Thông tin khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>

    label {
        font-size: 17px;
        font-weight: bold;
    }
</style>
<!-- End Navbar -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thông tin khách hàng</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <label>Mã khách hàng:</label>
                                    @Model.maND
                                </div>
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <label>Tên khách hàng:</label>
                                    @Model.hoten
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Số điện thoại:</label>
                                    @Model.sodienthoai
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Email:</label>
                                    @Model.email
                                </div>
                            </div>
                            
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <a class="btn btn-success" href="~/Admin/QLDonhang"><i class="fa fa-caret-left" style="font-size:15px;"></i> Quay lại</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

